@model IEnumerable<LCHB_BookingsMng.Models.Payment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PaymentCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PayStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PayStatus)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PayId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PayId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PayId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
