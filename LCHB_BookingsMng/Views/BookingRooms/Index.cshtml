@model IEnumerable<LCHB_BookingsMng.Models.BookingRoom>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookingFromDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingToDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomNav)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomServiceNav)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusPaymentNav)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookingFromDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingToDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomNav.RoomName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomServiceNav.RoomServiceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusPaymentNav.PaymentStatus)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BookingId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BookingId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BookingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
